<h1>Books</h1>
<% @books.each do |book| %>
  <h4>Title</h4>
    <p><%= book.title %></p>
  <h4>Body</h4>
    <p><%= book.body %></p>

    <%= link_to 'Show', book_path(book.id) %>
    <%= link_to 'Edit', edit_book_path(book.id) %>
    <%= link_to 'Destroy', "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>