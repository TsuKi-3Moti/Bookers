<h2>Editing Book</h2>
<%= form_with model: @book url: '/books/:id', method: :patch do |f| %>

  <div class="field">
    <label for= book.title>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for= book.body>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to 'Show', book_path(@book.id) %>
  |
  <%= link_to 'Back', books_path(@book.id) %>
<% end %>
